<div class="row pt-3 justify-content-center">
  <div class="col-lg-8">
    <div class="d-flex align-items-center gap-2 mb-4">
      <%= link_to contracts_path, class: "text-decoration-none text-muted" do %>
        <%= lucide_icon "arrow-left", size: 20 %>
      <% end %>
      <h1 class="fw-bold mb-0">Nuevo Contrato</h1>
    </div>

    <%= form_with(model: @contract, class: "card border-0 shadow-sm p-4 rounded-4") do |f| %>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.label :property_id, "Inmueble", class: "form-label fw-bold" %>
          <%= f.collection_select :property_id, @properties, :id, :address, { prompt: "Selecciona inmueble" }, { class: "form-select rounded-3 p-2" } %>
        </div>
        <div class="col-md-6">
          <%= f.label :tenant_id, "Inquilino", class: "form-label fw-bold" %>
          <%= f.collection_select :tenant_id, @tenants, :id, :name, { prompt: "Selecciona inquilino" }, { class: "form-select rounded-3 p-2" } %>
        </div>

        <div class="col-md-6">
          <%= f.label :start_date, "Fecha de Inicio", class: "form-label fw-bold" %>
          <%= f.date_field :start_date, class: "form-control rounded-3 p-2", required: true %>
        </div>
        <div class="col-md-6">
          <%= f.label :end_date, "Fecha de Finalización", class: "form-label fw-bold" %>
          <%= f.date_field :end_date, class: "form-control rounded-3 p-2" %>
        </div>

        <div class="col-md-6">
          <%= f.label :tenant_income, "Ingresos Mensuales Inquilino", class: "form-label fw-bold" %>
          <div class="input-group">
            <span class="input-group-text">$</span>
            <%= f.number_field :tenant_income, class: "form-control rounded-3 p-2" %>
          </div>
        </div>

        <div class="col-12">
          <%= f.label :co_debtor_info, "Información del Codeudor", class: "form-label fw-bold" %>
          <%= f.text_area :co_debtor_info, rows: 3, class: "form-control rounded-3 p-2", placeholder: "Nombre, Documento, Teléfono e Ingresos del codeudor..." %>
        </div>

        <div class="col-12 mt-4 text-end">
          <%= f.submit "Crear Contrato", class: "btn btn-hestia px-5 py-2 rounded-3 shadow-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
