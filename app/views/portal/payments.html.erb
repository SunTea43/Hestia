<div class="pt-3">
  <div class="mb-4">
    <h1 class="fw-bold mb-0">Pagos y Recibos</h1>
    <p class="text-muted">Consulta tu historial de pagos y facturas pendientes.</p>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
              <tr>
                <th class="px-4 py-3">Concepto</th>
                <th class="py-3">Fecha de Vencimiento</th>
                <th class="py-3">Monto</th>
                <th class="py-3">Estado</th>
                <th class="py-3 text-end px-4">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @charges.each do |charge| %>
                <tr>
                  <td class="px-4 py-3">
                    <div class="fw-bold"><%= charge.charge_type.humanize %></div>
                    <small class="text-muted"><%= charge.contract.property.address %></small>
                  </td>
                  <td><%= charge.due_date.strftime("%d/%m/%Y") %></td>
                  <td><h6 class="fw-bold mb-0">$<%= number_with_delimiter(charge.amount) %></h6></td>
                  <td>
                    <span class="badge <%= charge.paid? ? 'bg-success' : 'bg-warning' %> bg-opacity-10 <%= charge.paid? ? 'text-success' : 'text-warning' %> rounded-pill px-3 py-2">
                       <%= charge.status.capitalize %>
                    </span>
                  </td>
                  <td class="text-end px-4">
                    <% unless charge.paid? %>
                      <button class="btn btn-hestia btn-sm rounded-pill px-4 shadow-sm" onclick="alert('Funcionalidad de pago prÃ³ximamente disponible')">Pagar Ahora</button>
                    <% else %>
                      <%= link_to "#", class: "btn btn-outline-secondary btn-sm rounded-circle p-2", title: "Descargar Recibo" do %>
                        <%= lucide_icon "download", size: 18 %>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
