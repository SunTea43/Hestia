<div class="d-flex justify-content-between align-items-center mb-4 pt-3">
  <div>
    <h1 class="fw-bold mb-0">Inquilinos</h1>
    <p class="text-muted">Gestiona los residentes de tus inmuebles</p>
  </div>
  <%= link_to new_tenant_path, class: "btn btn-hestia d-flex align-items-center gap-2 px-4 py-2 rounded-3 shadow-sm" do %>
    <%= lucide_icon "user-plus", size: 20 %>
    Nuevo Inquilino
  <% end %>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
      <thead class="bg-light">
        <tr>
          <th class="px-4 py-3">Nombre</th>
          <th class="py-3">Documento</th>
          <th class="py-3">Email</th>
          <th class="py-3">Contratos</th>
          <th class="py-3 text-end px-4">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @tenants.each do |tenant| %>
          <tr>
            <td class="px-4">
              <div class="d-flex align-items-center gap-3">
                <div class="bg-primary bg-opacity-10 p-2 rounded-circle">
                  <%= lucide_icon "user", size: 20, class: "text-primary" %>
                </div>
                <div class="fw-bold"><%= tenant.name %></div>
              </div>
            </td>
            <td><%= tenant.document_number %></td>
            <td><%= tenant.email %></td>
            <td>
              <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">
                <%= tenant.contracts.count %> Activos
              </span>
            </td>
            <td class="text-end px-4">
              <div class="d-flex justify-content-end gap-2">
                <%= link_to tenant_path(tenant), class: "btn btn-outline-primary btn-sm rounded-3 p-2", title: "Ver perfil" do %>
                  <%= lucide_icon "eye", size: 18 %>
                <% end %>
                <%= link_to edit_tenant_path(tenant), class: "btn btn-outline-warning btn-sm rounded-3 p-2", title: "Editar" do %>
                  <%= lucide_icon "edit", size: 18 %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        <% if @tenants.empty? %>
          <tr>
            <td colspan="5" class="text-center py-5 text-muted">
              No hay inquilinos registrados a√∫n.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
