<div class="row min-vh-100 align-items-center justify-content-center">
  <div class="col-md-5">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
      <div class="card-body p-5">
        <div class="text-center mb-5">
          <%= lucide_icon "home", size: 48, class: "text-hestia-gold mb-3" %>
          <h2 class="fw-bold text-hestia-dark">Bienvenido a Hestia</h2>
          <p class="text-muted">Ingresa tus credenciales para continuar</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Correo Electrónico", class: "form-label fw-bold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3 p-3", placeholder: "nombre@empresa.com" %>
          </div>

          <div class="mb-4">
            <div class="d-flex justify-content-between">
              <%= f.label :password, "Contraseña", class: "form-label fw-bold" %>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && action_name != 'edit' %>
                <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "small text-decoration-none" %>
              <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-3 p-3", placeholder: "••••••••" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-4 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Recordarme en este equipo", class: "form-check-label small" %>
            </div>
          <% end %>

          <div class="d-grid gap-2">
            <%= f.submit "Iniciar Sesión", class: "btn btn-hestia btn-lg py-3 rounded-3 shadow-sm" %>
          </div>
        <% end %>

        <div class="text-center mt-5">
          <p class="small text-muted mb-0">Hestia v1.0.0 © 2026</p>
        </div>
      </div>
    </div>
  </div>
</div>
